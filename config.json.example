{
    "dbconnection": "postgresql://user:password@localhost:5432/database",

    "whisper": {
        "url": "http://whisper:8080/inference",
        "model": "whisper-1",
        "response_format": "vtt",
        "output_label": "AI_transcription",
        "target_chunk_secs": 600,
        "max_chunk_secs": 900,
        "silence_noise_db": -30,
        "silence_min_duration": 0.5
    },

    "audio": {
        "codec": "libopus",
        "lossless_bitrate": "300k",
        "lossy_bitrate": "256k",
        "vbr": "on",
        "application": "audio",
        "output_format": "ogg",
        "lossless_codecs": ["flac", "wav", "pcm_s16le"]
    },

    "picture": {
        "crf": 26,
        "thumbnail_crf": 28,
        "jpg_quality": 25,
        "thumbnail_width": 1280,
        "thumbnail_height": 720,
        "cover_crf": 26,
        "cover_thumbnail_crf": 30
    },

    "video": {
        "encoder": "qsv",
        "max_resolution_steps": 4,
        "min_dimension": 240,
        "fps_cap": 120.0,
        "audio_bitrate_base": 256,
        "threshold_2k_pixels": 3686400,
        "audio_bitrate_2k_bonus": 100,
        "quality_steps": [
            {
                "label": "original",
                "scale_divisor": 1,
                "audio_bitrate_divisor": 1
            },
            {
                "label": "half_resolution",
                "scale_divisor": 2,
                "audio_bitrate_divisor": 2
            },
            {
                "label": "quarter_resolution",
                "scale_divisor": 4,
                "audio_bitrate_divisor": 4
            },
            {
                "label": "eighth_resolution",
                "scale_divisor": 8,
                "audio_bitrate_divisor": 8
            }
        ],
        "filters": "unsharp=3:3:1.0:3:3:0.0,format=p010le",

        "nvenc": {
            "codec": "av1_nvenc",
            "preset": "p7",
            "tier": "high",
            "rc": "vbr",
            "cq": 26,
            "lookahead": 32,
            "temporal_aq": true
        },
        "qsv": {
            "codec": "av1_qsv",
            "preset": "veryslow",
            "global_quality": 28,
            "look_ahead_depth": 100
        },
        "vaapi": {
            "codec": "av1_vaapi",
            "quality": 51,
            "compression_ratio": 5
        },

        "dash": {
            "audio_codec": "libopus",
            "audio_vbr": "constrained",
            "audio_channels": 2,
            "segment_duration": 10500
        },
        "thumbnail": {
            "width": 1920,
            "height": 1080
        },
        "showcase": {
            "width": 480,
            "fps": 2,
            "max_frames": 60,
            "quality": 40,
            "cpu_used": 2
        },
        "preview_sprites": {
            "interval_seconds": 5.0,
            "thumb_width": 640,
            "thumb_height": 360,
            "max_sprites_per_file": 100,
            "sprites_across": 10,
            "quality": 36,
            "parallel_limit": 4
        }
    }
}
